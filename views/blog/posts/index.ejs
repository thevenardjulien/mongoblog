<%- include('../../layouts/header') %>

<!-- Main Content-->
<main class="mb-4">
  <div class="container px-4 px-lg-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h2 class="mb-0">Liste des posts</h2>
      <a href="/blog/posts/add" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Add New Post
      </a>
    </div>
    <% if (posts && posts.length > 0) { %>
      <table class="table table-striped table-hover">
        <thead class="table-dark">
          <tr>
            <th>Titre</th>
            <th>Sous-titre</th>
            <th>Auteur</th>
            <th>Date</th>
            <th>Voir</th>
            <th>Modifier</th>
          </tr>
        </thead>
        <tbody>
          <% posts.forEach(post => { %>
            <tr>
              <td><%= post.title %></td>
              <td><%= post.subtitle || '-' %></td>
              <td><%= post.author %></td>
              <td><%= new Date(post.date).toLocaleDateString('fr-FR') %> - <%= new Date(post.date).toLocaleTimeString('fr-FR', { hour: '2-digit', minute: '2-digit' }) %></td>
              <td>
                <a href="/blog/posts/<%= post.slug %>" class="btn btn-sm btn-primary">Voir</a>
              </td>
              <td>
                <a href="/blog/posts/<%= post.slug %>/edit" class="btn btn-sm btn-primary">Modifier</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } else { %>
      <p>Aucun post disponible.</p>
    <% } %>
  </div>
</main>

<%- include('../../layouts/footer') %>
